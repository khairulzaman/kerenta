<!DOCTYPE html>
<html>
<head>
  <title>
    <% if content_for?(:title) %>
      <%= yield(:title) %>
    <% else %>
      Kerenta
    <% end %>
  </title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="topbar">
    <div class="fill">
      <div class="container">
        <a class="brand" href="/">Kerenta</a>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="content">
      <% flash.each do |key, value| %>
        <div class='<%= 'alert-message ' + key.to_s %>'>
          <%= value %>
        </div>
      <% end %>
      <%= yield %>
    </div>
    <footer>
      <p>&copy; Kerenta 2011</p>
    </footer>
  </div>
</body>
</html>
