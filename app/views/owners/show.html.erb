<% title(@owner.name, "Owners") %>

<div class="page-header">
  <h1>Owners Management
    <small>Manage owners here</small>
  </h1>
</div>
<div class="row">
  <div class="span10">
    <small>
    </small>
    <h2>Details for <%= @owner.name %></h2>
      <%= @owner.name %>
      <%= @owner.telephone %>
      <div class="actions">
        <%= link_to "Back", owners_path, :class => "btn" %>
        <%= link_to "New Car", new_owner_car_path(@owner), :class => "btn" %>

        <%= link_to "Edit Owner", edit_owner_path(@owner), :class => "btn" %>
        <%= link_to "Delete Owner", @owner, :method => :delete,
          :confirm => "Are you sure you want to delete this owner?",
          :class => "btn danger" %>
      </div>
    </div>
    <div class="span4">
    </div>
</div>
