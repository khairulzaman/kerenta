<%= form_for(@owner, :html => { :class => 'form-stacked'} ) do |f| %>
  <%= f.error_messages %>
  <fieldset>
    <div class="clearfix">
      <%= f.label :name %>
      <div class="input">
        <%= f.text_field :name %>
      </div>
    </div>
    <div class="clearfix">
      <%= f.label :telephone %>
      <div class="input">
        <%= f.telephone_field :telephone %>
      </div>
    </div>
    <div class="clearfix">
      <%= f.label :address %>
      <div class="input">
        <%= f.text_area :address %>
      </div>
    </div>
    <div class="actions">
      <%= f.submit :class => "btn primary" %>
      <%= link_to "Cancel", owners_path, :class => "btn" %>
    </div>
  </fieldset>
<% end %>
