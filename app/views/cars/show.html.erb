<% title(@car.registration_number, "Cars") %>

<div class="page-header">
  <h1>Cars Management
    <small>Manage cars here</small>
  </h1>
</div>
<div class="row">
  <div class="span10">
    <small>
    </small>
    <h2>Details for <%= @car.registration_number %></h2>
      <%= @car.make %>
      <%= @car.model %>
      <%= @car.registration_number %>
      <%= @car.hourly_rate %>
    </div>
    <%= link_to "Edit Car", edit_owner_car_path(@owner, @car), :class => "btn" %>
    <%= link_to "Delete Car", [@owner, @car], :method => :delete,
      :confirm => "Are you sure you want to delete this car?",
      :class => "btn danger" %>
    <div class="span4">
    </div>
</div>
